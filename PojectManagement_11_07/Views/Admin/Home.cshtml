@model ProjectManagement_11_07.Models.ViewModel.ProjectUserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .avatar-sm {
            width: 30px;
            height: 30px;
        }
        .badge-soft-success, .badge-soft-warning {
            font-size: 12px;
        }
        .search-box {
            position: relative;
        }
        .search-icon {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 20px;
        }
        .fixed-size {
            width: 300px; /* Set a fixed width */
            height: 250px; /* Set a fixed height */
        }

        .fixed-size-card {
            height: 100%; /* Ensure the card fills the height of the column */
            display: flex;
            flex-direction: column;
        }

        .fixed-size-card .card-body {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

       /* Huy hiệu chung */
        .custom-badge {
            display: inline-block;
            padding: 0.5rem; /* Tương đương với p-2 */
            font-size: 75%;
            font-weight: 500;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: 0.25rem;
        }

        /* Huy hiệu với trạng thái thành công nhẹ */
        .custom-badge-completed {
            background-color: #d4edda; /* Màu nền nhẹ nhàng */
            color: #155724; /* Màu chữ */
        }
        .custom-badge-progress {
            color: #f34e4e;
            background-color: rgba(243, 78, 78, .1);    
        }

        .team-description {
            display: -webkit-box;
            -webkit-line-clamp: 2; /* Số dòng tối đa hiển thị */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .btn-soft-primary {
            color: #038edc;
            background-color: rgba(3, 142, 220, .1);
            border-color: transparent !important;
        }
       
    </style>
</head>
<body>
<div class="container mt-5">

    <div class="d-flex flex-column flex-sm-row mb-4">
        <div class="flex-grow-1">
            <a asp-action="AddProject" class="btn btn-soft-primary " >
                    Thêm Dự Án
            </a>
        </div>
         <div class="d-flex flex-column flex-sm-row mb-4">
            <input type="search" id="searchBox" class="form-control rounded me-sm-2 mb-2 mb-sm-0" placeholder="Dự án..." aria-label="Search" aria-describedby="search-addon" />
            <select id="statusProject" class="form-control rounded me-sm-2 mb-2 mb-sm-0">
                <option value="">Tất cả trạng thái</option>
                <option value="Đang thực hiện">Đang thực hiện</option>
                <option value="Hoàn thành">Hoàn thành</option>
            </select>
            <input type="number" id="minMemberCount" class="form-control rounded me-sm-2 mb-2 mb-sm-0" placeholder="Số lượng thành viên (từ)" aria-label="Min Member Count" />
            <input type="number" id="maxMemberCount" class="form-control rounded me-sm-2 mb-2 mb-sm-0" placeholder="Số lượng thành viên (đến)" aria-label="Max Member Count" />
            <input type="date" id="startDate" class="form-control rounded me-sm-2 mb-2 mb-sm-0" aria-label="Start Date" />
            <button type="button" class="btn btn-soft-primary" onclick="searchProjects()">Tìm</button>
        </div>

    </div>

    <div class="row" id="all-projects">
         @await Html.PartialAsync("_ProjectListPartial", Model.Projects)
    </div>
</div>



@*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>*@
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
<script>
    async function deleteProject(id) {
        if (confirm('Bạn có chắc chắn muốn xóa dự án này không?')) {
            try {
                const response = await fetch(`/Admin/DeleteProject/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById(`${id}`).remove();
                    alert(result.message);
                } else {
                    alert(result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Đã xảy ra lỗi khi xóa sản phẩm.');
            }
        }
    }

    async function searchProjects() {
        const searchString = document.getElementById('searchBox').value;
        const statusProject = document.getElementById('statusProject').value;
        const minMemberCount = document.getElementById('minMemberCount').value;
        const maxMemberCount = document.getElementById('maxMemberCount').value;
        const startDate = document.getElementById('startDate').value;

        const url = `@Url.Action("SearchProjects", "Admin")?searchString=${encodeURIComponent(searchString)}&statusProject=${encodeURIComponent(statusProject)}&minMemberCount=${encodeURIComponent(minMemberCount)}&maxMemberCount=${encodeURIComponent(maxMemberCount)}&startDate=${encodeURIComponent(startDate)}`;

        try {
            const response = await fetch(url);
            if (response.ok) {
                const result = await response.text();
                document.getElementById('all-projects').innerHTML = result;
            } else {
                console.error('Failed to fetch projects', response.status, response.statusText);
            }
        } catch (error) {
            console.error('Error fetching projects', error);
        }
    }
   

</script>
</html>
